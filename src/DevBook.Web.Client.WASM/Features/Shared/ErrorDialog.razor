<MudDialog IsVisible="IsVisible" DefaultFocus="DefaultFocus.LastChild">
	<TitleContent>
		<MudText Typo="Typo.h6">@Title</MudText>
	</TitleContent>
	<DialogContent>
		<MudText Typo="Typo.body1">@ErrorMessage</MudText>
	</DialogContent>
	<DialogActions>
		<MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Ok</MudButton>
	</DialogActions>
</MudDialog>

	@code {
	[Parameter] public string Title { get; set; } = "Uh oh. Something went wrong.";
	[Parameter] public string ErrorMessage { get; set; } = "There was an error.";
	[Parameter] public bool IsVisible { get; set; } = true;

	void Submit()
	{
		IsVisible = false;
	}
}
